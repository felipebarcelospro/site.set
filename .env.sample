# Database - PostgreSQL connection URL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/site-set"

# API Authentication
API_AUTH_TOKEN="your-auth-token-here"
NEXT_PUBLIC_API_KEY="your-public-api-key-here"

# OpenAI - Required for blog post generation
OPENAI_API_KEY="your-openai-api-key-here"

# Analytics - Optional but recommended for production
NEXT_PUBLIC_ANALYTICS_ID="your-analytics-id-here"

# Rate Limiting - Optional, defaults shown
RATE_LIMIT_WINDOW="60000" # 1 minute in milliseconds
RATE_LIMIT_MAX_REQUESTS="10" # Maximum requests per window

# CORS - Optional, defaults shown
CORS_ALLOWED_ORIGINS="http://localhost:3000,https://your-production-domain.com"

# Cache Control - Optional
CACHE_MAX_AGE="31536000" # 1 year in seconds

# Environment
NODE_ENV="development" # development, production, or test 